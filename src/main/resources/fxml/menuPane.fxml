<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.touljaboy.controller.MenuPaneController">
   <children>
      <MenuBar AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="BizzPal">
            <items>
              <MenuItem fx:id="logOutMenuItem" mnemonicParsing="false" text="Log out" />
                  <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Settings">
            <items>
                  <Menu mnemonicParsing="false" text="User">
                    <items>
                      <MenuItem fx:id="modUserMenuItem" mnemonicParsing="false" text="Modify User Data" />
                        <MenuItem fx:id="addUserMenuItem" mnemonicParsing="false" text="Add New User" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="File">
                    <items>
                      <MenuItem fx:id="newSourceMenuItem" mnemonicParsing="false" text="New Source Directory" />
                    <MenuItem fx:id="dirMenuItem" mnemonicParsing="false" text="Change Source Directory" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
